<div class="container mt-5">
  <h2>Perfil da Empresa</h2>

<div class="profile-info mt-5">

  <p><strong>Nome :</strong> <%= @company.company_name %></p>
 </div>
  <div class="profile-info mt-5">

  <p><strong>CNPJ :</strong> <%= @company.cnpj %></p>
   </div>
  <div class="profile-info mt-5">

  <p><strong>Email :</strong> <%= @company.user.email %></p>
   </div>

  <div class="btn-group-vertical w-100 mt-3">
  <%= link_to 'Anunciar uma vaga', new_job_path, class: ' mb-3 button' %>
  <%= link_to 'Minhas vagas', root_path, class: ' mb-3 button' %>
  <%= link_to 'Editar Empresa', edit_company_path(@company), class: ' mb-3 button' %>
  <%= link_to 'Excluir Empresa', company_path(@company), data: { turbo_method: :delete }, class: ' mb-3 button' %>
  <%= link_to "Voltar para as vagas", jobs_path, class: ' button' %>
</div>

</div>
