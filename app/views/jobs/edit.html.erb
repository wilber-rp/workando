<div class="container mt-4">
  <h2>EDITAR VAGA</h2>

  <div class="container text-start">
    <%= simple_form_for @job do |f| %>
      <%= f.input :description, input_html: { class: 'profile-info' }, label: 'Descrição da vaga' %>
      <%= f.input :address, input_html: { class: 'profile-info' }, label: 'Endereço' %>
      <%= f.input :salary, input_html: { class: 'profile-info' }, label: 'Salário por hora' %>
      <label for="job_interest_area_id">Selecione uma categoria:</label>
      <%= f.collection_select :interest_area_id, @interest_areas, :id, :name, { include_blank: 'Selecione uma categoria' }, { selected: @job.interest_area_id, class: 'profile-info', id: 'job_interest_area_id' } %>
      <%= f.submit 'confirmar alterações', class: 'button button-blue button-no-border' %>
    <% end %>
    <%= button_to job_path(@job), method: :get, class: 'button ghost mt-3' do %>
      Voltar
    <% end %>
  </div>
</div>
