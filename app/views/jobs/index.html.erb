        <%= button_to job_matches_path(job_id: @job.id, dislike: false), method: :post, class: "btn-like-match" do %>
          <i class="fa-regular fa-thumbs-up" data-job-animation-target="jobRight" data-action="click->job-animation#right"></i>
        <% end %>
        </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
