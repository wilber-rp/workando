
<div class="out-container">
  <div class="container-forms-custom">

    <div class="title">
      <h2>Nova vaga</h2>
    </div>



    <div data-controller="cep">
      <div class="forms">
      <%= simple_form_for @job do |f| %>
        <%= f.collection_select :interest_area_id, @interest_areas, :id, :name, { include_blank: 'Selecione uma área' }, { class: "profile-info " } %>

        <%= f.input  :cep, input_html: { id: 'cepSelect', class: "profile-info", data: { action: 'change->cep#updateAddress' }}%>
        <%= f.input  :address, input_html: { id: 'addressSelect', class: "profile-info" }, label: "Endereço"%>
        <%= f.input  :city, input_html: { id: 'citySelect', class: "profile-info" }, label: "Cidade" %>
        <%= f.input  :description, input_html: { class: "profile-info" }, label: "Descrição da vaga" %>
        <%= f.input  :salary, label: "Valor hora", input_html: { class: "profile-info" }%>

        <%= f.input :long, label: false, input_html: { id: 'longSelect', class: "profile-info d-none"} %>
        <%= f.input :lat, label: false, input_html: { id: 'latSelect', class: "profile-info d-none"} %>
      </div>

      <%= f.submit "ANUNCIAR VAGA", class: 'button button-blue mt-5' %>
      <%= link_to 'VOLTAR PARA PERFIL', company_path(@company), class: 'button button-transparent' %>
    <% end %>
    </div>

    </div>
</div>
